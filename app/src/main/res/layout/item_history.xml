<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#1F1F1F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBookingId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking #123"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 25.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFD54F"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvnamemovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie : Black Panther"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2026-01-27"
            android:textSize="14sp"
            android:textColor="#BBBBBB"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 20:30"
            android:textSize="14sp"
            android:textColor="#BBBBBB"/>

        <TextView
            android:id="@+id/tvSeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seat: A1,A2"
            android:textSize="14sp"
            android:textColor="#BBBBBB"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets: 2"
            android:textSize="14sp"
            android:textColor="#BBBBBB"/>

        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment: Card"
            android:textSize="14sp"
            android:textColor="#BBBBBB"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
